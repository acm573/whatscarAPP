<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fortino.whatscarlolipop.Controlar_DispositivosActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:elevation="5dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/boton_redondo4"
                android:layout_x="6dp">
                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/layTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo3">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="6dp"
                        android:text="Cerrar"
                        android:textColor="#FFF"
                        android:textSize="25dp" />
                </android.support.v7.widget.LinearLayoutCompat>

                <LinearLayout
                    android:id="@+id/liyIntruccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:layout_x="6dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:text="Puertas delanteras"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <android.support.v7.widget.LinearLayoutCompat
                        android:background="@drawable/boton_redondo5"
                        android:elevation="@dimen/elevation_botones"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/imvCerrar"
                            android:background="@drawable/ic_lock_outline_black_24dp"/>
                    </android.support.v7.widget.LinearLayoutCompat>
                    <android.support.v7.widget.LinearLayoutCompat
                        android:background="@drawable/boton_redondo6"
                        android:elevation="@dimen/elevation_botones"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/imvAbrir"
                            android:background="@drawable/ic_lock_open_black_24dp"/>
                    </android.support.v7.widget.LinearLayoutCompat>
                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="-350dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="-170dp"
                        android:layout_marginTop="25dp"
                        android:background="#C7C7CC"/>
                    </android.support.v7.widget.LinearLayoutCompat>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liyIntruccion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="90dp"
                    android:layout_x="6dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="Puertas traseras"
                        android:textColor="#000"
                        android:textSize="20dp" />
                    <android.support.v7.widget.LinearLayoutCompat
                        android:background="@drawable/boton_redondo5"
                        android:elevation="@dimen/elevation_botones"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/imvCerrar2"
                            android:background="@drawable/ic_lock_outline_black_24dp"/>
                    </android.support.v7.widget.LinearLayoutCompat>
                    <android.support.v7.widget.LinearLayoutCompat
                        android:background="@drawable/boton_redondo6"
                        android:elevation="@dimen/elevation_botones"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/imvAbrir2"
                            android:background="@drawable/ic_lock_open_black_24dp"/>
                    </android.support.v7.widget.LinearLayoutCompat>
                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="-350dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="-170dp"
                            android:layout_marginTop="25dp"
                            android:background="#C7C7CC"/>
                    </android.support.v7.widget.LinearLayoutCompat>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/liyIntruccion3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="140dp"
                    android:layout_x="6dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="Cajuela"
                        android:textColor="#000"
                        android:textSize="20dp" />
                    <android.support.v7.widget.LinearLayoutCompat
                        android:background="@drawable/boton_redondo5"
                        android:elevation="@dimen/elevation_botones"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/imvCerrar3"
                            android:background="@drawable/ic_lock_outline_black_24dp"/>
                    </android.support.v7.widget.LinearLayoutCompat>
                    <android.support.v7.widget.LinearLayoutCompat
                        android:background="@drawable/boton_redondo6"
                        android:elevation="@dimen/elevation_botones"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/imvAbrir3"
                            android:background="@drawable/ic_lock_open_black_24dp"/>
                    </android.support.v7.widget.LinearLayoutCompat>
                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="-350dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="-170dp"
                            android:layout_marginTop="25dp"
                            android:background="#C7C7CC"/>
                    </android.support.v7.widget.LinearLayoutCompat>
                </LinearLayout>
            </RelativeLayout>
    </ScrollView>
</RelativeLayout>
