<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fortino.whatscarlolipop.Vehiculo_ParticularActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/liyContDispositivos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_x="6dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="20dp">

                <Button
                    android:id="@+id/btnLog"
                    android:layout_width="280dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/boton_redondo3"
                    android:onClick="ControlarDispositivos_click"
                    android:text="   Controlar dispositivos"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="#FBFFFF"
                    android:textSize="20dp" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:layout_marginLeft="-54dp"
                    android:layout_marginTop="99dp"
                    android:background="@drawable/boton_redondo6"
                    android:elevation="@dimen/elevation_botones"
                    android:onClick="ControlarDispositivos_click">

                    <ImageView
                        android:id="@+id/imvAbrir"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/ic_vpn_key_black_24dp" />
                </android.support.v7.widget.LinearLayoutCompat>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/liyLocVehiculos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/liyContDispositivos"
                android:layout_centerHorizontal="true"
                android:layout_x="6dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="20dp">

                <Button
                    android:id="@+id/btnLocVehiculo"
                    android:layout_width="280dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/boton_redondo3"
                    android:text="   Localizar vehículo"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="#FBFFFF"
                    android:textSize="20dp" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:layout_marginLeft="-54dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/boton_redondo6"
                    android:elevation="@dimen/elevation_botones">

                    <ImageView
                        android:id="@+id/imvLocVehiculo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/ic_place_black_24dp" />
                </android.support.v7.widget.LinearLayoutCompat>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/liyInformacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/liyLocVehiculos"
                android:layout_centerHorizontal="true"
                android:layout_x="6dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="20dp">

                <Button
                    android:id="@+id/btnInformacion"
                    android:layout_width="280dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/boton_redondo3"
                    android:onClick="Informacion_click"
                    android:text="   Información"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="#FBFFFF"
                    android:textSize="20dp" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:layout_marginLeft="-54dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/boton_redondo6"
                    android:elevation="@dimen/elevation_botones"
                    android:onClick="Informacion_click">

                    <ImageView
                        android:id="@+id/imvInformacion"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/ic_info_outline_black_24dp" />
                </android.support.v7.widget.LinearLayoutCompat>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
