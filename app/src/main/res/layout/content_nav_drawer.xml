<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.fortino.whatscarlolipop.nav_drawerActivity"
    tools:showIn="@layout/app_bar_nav_drawer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:fillViewport="false"
        android:paddingLeft="10dp"
        android:paddingRight="16dp">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarStyle="insideOverlay">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_x="6dp">


            <LinearLayout
                android:id="@+id/liyIntruccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:layout_x="6dp"
                android:orientation="horizontal">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/boton_redondo7"
                    android:elevation="@dimen/elevation_botones">

                    <ImageView
                        android:id="@+id/imvAbrir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_notifications_black_24dp" />
                </android.support.v7.widget.LinearLayoutCompat>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:onClick="VehiculoParticular_click"
                    android:text="Vehículo particular"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/liyFlecha"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/boton_redondo7"
                    android:elevation="@dimen/elevation_botones"
                    android:onClick="mostrar">

                    <ImageView
                        android:id="@+id/imvFlechaabrir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_keyboard_arrow_left_black_24dp" />
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/liyBotonera1"
                    android:layout_width="100dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="-80dp"
                    android:visibility="invisible">

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/boton_redondo6"
                        android:elevation="@dimen/elevation_botones"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/imvEliminar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_delete_black_24dp" />
                    </android.support.v7.widget.LinearLayoutCompat>

                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/liyBotonEditar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/boton_redondo5"
                        android:elevation="@dimen/elevation_botones"
                        android:onClick="Editar_click"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/imvEditar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_create_black_24dp"
                            android:onClick="Editar_click" />
                    </android.support.v7.widget.LinearLayoutCompat>
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-450dp"
                    android:layout_marginTop="42dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="-170dp"
                        android:layout_marginTop="25dp"
                        android:background="#C7C7CC" />
                </android.support.v7.widget.LinearLayoutCompat>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liyIntruccion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:layout_x="6dp"
                android:orientation="horizontal">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/boton_redondo7"
                    android:elevation="@dimen/elevation_botones">

                    <ImageView
                        android:id="@+id/imvAbrir2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_notifications_active_black_24dp" />
                </android.support.v7.widget.LinearLayoutCompat>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:onClick="VehiculoParticular_click"
                    android:text="Vehículo empleo"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/liyFlecha2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/boton_redondo7"
                    android:elevation="@dimen/elevation_botones"
                    android:onClick="mostrar">

                    <ImageView
                        android:id="@+id/imvFlechaabrir2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_keyboard_arrow_left_black_24dp" />
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/liyBotonera2"
                    android:layout_width="100dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="-80dp"
                    android:visibility="invisible">

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/boton_redondo6"
                        android:elevation="@dimen/elevation_botones">

                        <ImageView
                            android:id="@+id/imvEliminar2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_delete_black_24dp" />
                    </android.support.v7.widget.LinearLayoutCompat>

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/boton_redondo5"
                        android:elevation="@dimen/elevation_botones">

                        <ImageView
                            android:id="@+id/imvEditar2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_create_black_24dp" />
                    </android.support.v7.widget.LinearLayoutCompat>
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-450dp"
                    android:layout_marginTop="42dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="-170dp"
                        android:layout_marginTop="25dp"
                        android:background="#C7C7CC" />
                </android.support.v7.widget.LinearLayoutCompat>
            </LinearLayout>
        </RelativeLayout>
        </HorizontalScrollView>
    </ScrollView>
</RelativeLayout>
